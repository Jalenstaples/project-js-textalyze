{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest/globals": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["jest"],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "prefer-const": 0,
        "semi": [2, "always"],
        "space-before-function-paren": ["error", "never"],
        "quote-props": ["error", "consistent"]
    }
}
